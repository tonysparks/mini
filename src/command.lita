import "common"
//import "gang"
import "entity"

/**
    Commands we can issue to gang members
*/    
@asStr
public enum CommandType {
    @asStr("N/A")
    NONE     = 0,

    @asStr("Rob")
    ROB      = (1<<0),

    @asStr("Attack")
    ATTACK   = (1<<1),
}

public struct Command {
    type: CommandType

    union {
        struct RobCommand {
            target: Entity*
        }
    }
}

public const emptyCmd = Command {
    .type = CommandType.NONE
}